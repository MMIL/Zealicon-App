<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nav_back"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                style="@style/Toolbar"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/guillotine_hamburger"
                    style="@style/ImageView.Hamburger"
                    android:src="@drawable/ic_menu" />
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:id="@+id/profile_group"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="20dp">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/home"
                    android:textStyle="normal|bold" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/feed_group"
                style="@style/LinearLayout.GuillotineItem">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_feed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/events"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/coderz_group"
                style="@style/LinearLayout.GuillotineItem"
                android:weightSum="1">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/arrow"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.07" />

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/coderz"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/playiton_group"
                style="@style/LinearLayout.GuillotineItem"
                android:weightSum="1">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/arrow"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.07" />

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/play_it_on"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/mechavoltz_group"
                style="@style/LinearLayout.GuillotineItem"
                android:weightSum="1">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/arrow"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.07" />

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/mechavoltz"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/robotiles_group"
                style="@style/LinearLayout.GuillotineItem"
                android:weightSum="1">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/arrow"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.07" />

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/robotiles"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/coloralo_group"
                style="@style/LinearLayout.GuillotineItem"
                android:weightSum="1">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/arrow"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.07" />

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/coloralo"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/zwars_group"
                style="@style/LinearLayout.GuillotineItem"
                android:weightSum="1">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/arrow"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.07" />

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/z_wars"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_group"
                style="@style/LinearLayout.GuillotineItem">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_activity_active"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem.Selected"
                    android:text="Contact Us"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/our_team"
                style="@style/LinearLayout.GuillotineItem">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_feed"
                    android:layout_width="30dp"
                    android:layout_height="20dp"/>

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem.Selected"
                    android:text="Team"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal|bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sponsors"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginBottom="20dp">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Sponsors"
                    android:textStyle="normal|bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/settings_group"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginBottom="20dp">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/ic_settings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <com.zeal.android.mmil.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Exit"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

